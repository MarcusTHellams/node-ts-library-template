{
  "name": "node-ts-library-template",
  "version": "0.0.1",
  "description": "",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.iife.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsc-watch --onSuccess \"ts-node src/index.ts\"",
    "dev:debug": "tsc-watch --onSuccess \"node --inspect -r ts-node/register src/index.ts\"",
    "format": "prettier . --write --ignore-path .gitignore && git update-index --again",
    "lint": "eslint . --config .eslintrc.build.json --ext .ts,.tsx --fix --ignore-path .gitignore",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:coverage": "vitest --watch=false --silent --coverage",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "Marcus Hellams",
  "license": "ISC",
  "devDependencies": {
    "@swc/core": "^1.2.241",
    "@tsconfig/node16": "^1.0.3",
    "@types/node": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "c8": "^7.12.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.3.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sort-destructure-keys": "^1.4.0",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "tsc-watch": "^5.0.3",
    "tsup": "^6.1.3",
    "typescript": "^4.7.4",
    "vite": "^3.0.9",
    "vitest": "^0.23.4"
  }
}
